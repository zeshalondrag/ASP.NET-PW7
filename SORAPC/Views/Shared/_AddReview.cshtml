@model SORAPC.Models.Review

<style>
    .add-review-form {
        margin-top: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 16px;
        background-color: #f9f9f9;
    }

    .add-review-form h3 {
        margin-bottom: 15px;
        font-size: 18px;
        color: #333;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-group label {
        font-weight: bold;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 12px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0b6ad0;
    }
</style>

@if (User.Identity.IsAuthenticated)
{
    <div class="add-review-form">
        <h3>Добавить отзыв</h3>
        <form asp-action="AddReview" asp-controller="ProductDetails" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label>Оценка:</label>
                <select asp-for="Rating" class="form-control">
                    <option value="1">⭐️</option>
                    <option value="2">⭐️⭐️</option>
                    <option value="3">⭐️⭐️⭐️</option>
                    <option value="4">⭐️⭐️⭐️⭐️</option>
                    <option value="5">⭐️⭐️⭐️⭐️⭐️</option>
                </select>
            </div>
            <div class="form-group">
                <label>Текст отзыва:</label>
                <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Отправить</button>
        </form>
    </div>
}
else
{
    <p>Чтобы оставить отзыв, <a href="/Authorization/Authorization">войдите</a> в систему.</p>
}