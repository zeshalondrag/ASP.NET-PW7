@model IEnumerable<SORAPC.Models.ProductCategory>
@{
    ViewBag.Title = "Список категорий";
}
<a asp-action="CreateProductCategory" asp-controller="ProductCategory" class="btn btn-primary">Добавить категорию</a>
<table class="table">
    <thead>
        <tr>
            <th>Название категорий</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-controller="ProductCategory" asp-action="EditProductCategory" asp-route-id="@item.IdProductCategory">Изменить</a> |
                    <a asp-controller="ProductCategory" asp-action="DetailsProductCategory" asp-route-id="@item.IdProductCategory">Детали</a> |
                    <a asp-controller="ProductCategory" asp-action="DeleteProductCategory" asp-route-id="@item.IdProductCategory">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
