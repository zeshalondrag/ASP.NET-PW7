@model IEnumerable<SORAPC.Models.OrderStatus>
@{
    ViewBag.Title = "Список статутов заказа";
}
<a asp-action="CreateOrderStatus" asp-controller="OrderStatus" class="btn btn-primary">Добавить статус заказ</a>
<table class="table">
    <thead>
        <tr>
            <th>Название статусов заказа</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-controller="OrderStatus" asp-action="EditOrderStatus" asp-route-id="@item.IdOrderStatus">Изменить</a> |
                    <a asp-controller="OrderStatus" asp-action="DetailsOrderStatus" asp-route-id="@item.IdOrderStatus">Детали</a> |
                    <a asp-controller="OrderStatus" asp-action="DeleteOrderStatus" asp-route-id="@item.IdOrderStatus">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
