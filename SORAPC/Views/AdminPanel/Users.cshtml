@model IEnumerable<SORAPC.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
<a asp-action="CreateUsers" asp-controller="Users" class="btn btn-primary">Добавить пользователя</a>
<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Почта</th>
            <th>Телефон</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserSurname</td>
                <td>@item.UserName</td>
                <td>@item.UserMiddlename</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Logins</td>
                <td>@item.Passwords</td>
                <td>
                    @{
                        string roleName = item.RoleId == 1 ? "Администратор" :
                        item.RoleId == 2 ? "Клиент" :
                        "Неизвестная роль";
                        @roleName
                    }
                </td>
                <td>
                    <a asp-controller="Users" asp-action="EditUsers" asp-route-id="@item.IdUsers">Изменить</a> |
                    <a asp-controller="Users" asp-action="DetailsUsers" asp-route-id="@item.IdUsers">Детали</a> |
                    <a asp-controller="Users" asp-action="DeleteUsers" asp-route-id="@item.IdUsers">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
