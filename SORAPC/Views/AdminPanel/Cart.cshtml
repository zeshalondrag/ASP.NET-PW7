@model IEnumerable<SORAPC.Models.Cart>
@{
    ViewBag.Title = "Список корзин";
}
<a asp-action="CreateCart" asp-controller="Cart" class="btn btn-primary">Добавить корзину</a>
<table class="table">
    <thead>
        <tr>
            <th>Пользователь</th>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Users</td>
                <td>@item.Product</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    <a asp-controller="Cart" asp-action="EditCart" asp-route-id="@item.IdCart">Изменить</a> |
                    <a asp-controller="Cart" asp-action="DetailsCart" asp-route-id="@item.IdCart">Детали</a> |
                    <a asp-controller="Cart" asp-action="DeleteCart" asp-route-id="@item.IdCart">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
