@model IEnumerable<SORAPC.Models.ProductStatus>
@{
    ViewBag.Title = "Список статусов продукта";
}
<a asp-action="CreateProductStatus" asp-controller="ProductStatus" class="btn btn-primary">Добавить статус продукта</a>
<table class="table">
    <thead>
        <tr>
            <th>Название статуса продукта</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-controller="ProductStatus" asp-action="EditProductStatus" asp-route-id="@item.IdProductStatus">Изменить</a> |
                    <a asp-controller="ProductStatus" asp-action="DetailsProductStatus" asp-route-id="@item.IdProductStatus">Детали</a> |
                    <a asp-controller="ProductStatus" asp-action="DeleteProductStatus" asp-route-id="@item.IdProductStatus">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>