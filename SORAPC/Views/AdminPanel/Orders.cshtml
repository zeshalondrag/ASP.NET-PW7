@model IEnumerable<SORAPC.Models.Order>
@{
    ViewBag.Title = "Список заказов";
}
<a asp-action="CreateOrders" asp-controller="Orders" class="btn btn-primary">Добавить заказ</a>
<table class="table">
    <thead>
        <tr>
            <th>Пользователь</th>
            <th>Номер заказа</th>
            <th>Дата заказа</th>
            <th>Итоговая сумма</th>
            <th>Статус заказа</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UsersId</td>
                <td>@item.OrderNumber</td>
                <td>@item.OrderDate</td>
                <td>@item.TotalAmount</td>
                <td>@item.OrderStatusId</td>
                <td>
                    <a asp-controller="Orders" asp-action="EditOrders" asp-route-id="@item.IdOrder">Изменить</a> |
                    <a asp-controller="Orders" asp-action="DetailsOrders" asp-route-id="@item.IdOrder">Детали</a> |
                    <a asp-controller="Orders" asp-action="DeleteOrders" asp-route-id="@item.IdOrder">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
