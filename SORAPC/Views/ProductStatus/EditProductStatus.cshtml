@model SORAPC.Models.ProductStatus
@{
    ViewBag.Title = "Редактирование статуса продукта";
}
<h2>Редактирование статуса продукта</h2>
<form asp-controller="ProductStatus" asp-action="EditProductStatus" method="post">
    <input type="hidden" asp-for="IdProductStatus" />
    <div class="form-group">
        <label asp-for="Title">Название статуса</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>