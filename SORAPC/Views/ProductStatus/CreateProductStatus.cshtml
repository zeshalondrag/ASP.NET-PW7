@model SORAPC.Models.ProductStatus
@{
    ViewBag.Title = "Добавление статуса продукта";
}
<h2>Добавление статуса продукта</h2>
<form asp-controller="ProductStatus" asp-action="CreateProductStatus" method="post">
    <div class="form-group">
        <label asp-for="Title">Название статуса</label>
        <input asp-for="Title" required type="text" class="form-control" name="Title" placeholder="Введите название статуса продукта" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>