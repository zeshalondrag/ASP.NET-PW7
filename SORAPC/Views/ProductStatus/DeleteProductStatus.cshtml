@model SORAPC.Models.ProductStatus
@{
    ViewBag.Title = "Удаление статуса продукта";
}
<h2>Удаление статуса продукта</h2>
<dl>
    <dt>Название статуса</dt>
    <dd>@Model.Title</dd>
</dl>
<form asp-controller="ProductStatus" asp-action="DeleteProductStatus" method="post">
    <input type="hidden" asp-for="IdProductStatus" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>
