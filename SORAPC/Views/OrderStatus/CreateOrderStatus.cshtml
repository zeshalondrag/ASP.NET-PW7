@model SORAPC.Models.OrderStatus

@{
    ViewBag.Title = "Создать новый статус заказа";
}

<h2>Создание нового статуса заказа</h2>

<form asp-action="CreateOrderStatus" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название статуса</label>
        <input asp-for="Title" class="form-control" placeholder="Введите название статуса" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>