@model SORAPC.Models.OrderStatus

@{
    ViewBag.Title = "Редактирование статуса заказа";
}

<h2>Редактирование статуса заказа</h2>

<form asp-action="EditOrderStatus" method="post">
    <input type="hidden" asp-for="IdOrderStatus" />
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название статуса</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>