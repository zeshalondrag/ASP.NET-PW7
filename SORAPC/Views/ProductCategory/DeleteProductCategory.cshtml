@model SORAPC.Models.ProductCategory
@{
    ViewBag.Title = "Удаление категории товара";
}
<h2>Удаление категории товара</h2>
<dl>
    <dt>Название категории</dt>
    <dd>@Model.Title</dd>
</dl>
<form asp-controller="ProductCategory" asp-action="DeleteProductCategory" method="post">
    <input type="hidden" asp-for="IdProductCategory" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>