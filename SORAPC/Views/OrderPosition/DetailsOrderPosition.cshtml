@model SORAPC.Models.OrderPosition

@{
    ViewBag.Title = "Детали позиции заказа";
}

<h2>Детали позиции заказа</h2>

<dl>
    <dt>№</dt>
    <dd>@Model.IdOrderPosition</dd>
    <dt>Заказ</dt>
