@model SORAPC.Models.OrderPosition

@{
    ViewBag.Title = "Удаление позиции заказа";
}

<h2>Удаление позиции заказа</h2>

<p>Вы уверены, что хотите удалить позицию заказа с ID: @Model.IdOrderPosition?</p>

<form asp-controller="OrdersPosition" asp-action="DeleteOrdersPosition" method="post">
    <input type="hidden" asp-for="IdOrderPosition" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
</form>

<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>