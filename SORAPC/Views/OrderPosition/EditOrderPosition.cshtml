@model SORAPC.Models.OrderPosition

@{
    ViewBag.Title = "Редактирование позиции заказа";
}

<h2>Редактирование позиции заказа</h2>

<form asp-controller="OrdersPosition" asp-action="EditOrdersPosition" method="post">
    <input type="hidden" asp-for="IdOrderPosition" />
    <div class="form-group">
        <label asp-for="OrderId">ID Заказа</label>
        <input asp-for="OrderId" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ProductId">ID Продукта</label>
        <input asp-for="ProductId" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Количество</label>
        <input asp-for="Quantity" class="form-control" required type="number" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>