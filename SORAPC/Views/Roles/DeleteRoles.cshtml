@model SORAPC.Models.Role
@{
    ViewBag.Title = "Удаление роли";
}
<h2>Удаление роли</h2>
<dl>
    <dt>Название роли</dt>
    <dd>@Model.Title</dd>
</dl>
<form asp-controller="Roles" asp-action="DeleteRoles" method="post">
    <input type="hidden" asp-for="IdRole" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>