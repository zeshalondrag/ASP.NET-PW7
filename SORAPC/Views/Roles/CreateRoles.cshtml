@model SORAPC.Models.Role
@{
    ViewBag.Title = "Добавление роли";
}
<h2>Добавление роли</h2>
<form asp-controller="Roles" asp-action="CreateRoles" method="post">
    <div class="form-group">
        <label asp-for="Title">Название роли</label>
        <input asp-for="Title" required type="text" class="form-control" name="Title" placeholder="Введите название роли" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>