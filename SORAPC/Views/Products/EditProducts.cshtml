@model SORAPC.Models.Product
@{
    ViewBag.Title = "Редактирование товара";
}

<h2>Редактирование товара</h2>

<form asp-controller="Products" asp-action="EditProducts" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Names">Название товара</label>
        <input type="text" class="form-control" id="Names" name="Names" value="@Model.Names" required placeholder="Введите название товара" />
    </div>

    <div class="form-group">
        <label for="Price">Цена</label>
        <input type="number" step="0.01" class="form-control" id="Price" name="Price" required placeholder="Введите цену товара" />
    </div>

    <div class="form-group">
        <label for="Descriptions">Описание</label>
        <textarea class="form-control" id="Descriptions" name="Descriptions" rows="4" required placeholder="Введите описание товара">@Model.Descriptions</textarea>
    </div>

    <div class="form-group">
        <label for="Quantity">Количество</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity" required placeholder="Введите количество товара" />
    </div>

    <div class="form-group">
        <label for="ProductStatusId">Статус товара</label>
        <select id="ProductStatusId" name="ProductStatusId" class="form-control" required>
            <option value="1">В наличии</option>
            <option value="2">Нет в наличии</option>
        </select>
    </div>

    <div class="form-group">
        <label for="ProductCategoryId">Категория товара</label>
        <select id="ProductCategoryId" name="ProductCategoryId" class="form-control" required>
            <option value="1">Материнская плата</option>
            <option value="2">Видеокарта</option>
            <option value="3">Процессор</option>
            <option value="4">Система охлаждения</option>
            <option value="5">Оперативная память</option>
            <option value="6">Блок питания</option>
            <option value="7">Жесткий диск/SSD</option>
            <option value="8">Корпус</option>
            <option value="9">Периферия</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Img">Путь к изображению товара</label>
        <input type="text" class="form-control" id="Img" name="Img" placeholder="Введите путь к изображению" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>