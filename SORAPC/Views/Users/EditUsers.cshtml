@model SORAPC.Models.User
@{
    ViewBag.Title = "Редактирование пользователя";
}
<h2>Редактирование пользователя</h2>
<form asp-controller="Users" asp-action="EditUsers">
    <input type="hidden" asp-for="IdUsers" />
    <div class="form-group">
        <label asp-for="UserSurname"></label>
        <input asp-for="UserSurname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserMiddlename"></label>
        <input asp-for="UserMiddlename" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Logins"></label>
        <input asp-for="Logins" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Passwords"></label>
        <input asp-for="Passwords" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoleId">Роль</label>
        <select asp-for="RoleId" class="form-control" name="RoleId">
            <option value="1">Администратор</option>
            <option value="2">Клиент</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>