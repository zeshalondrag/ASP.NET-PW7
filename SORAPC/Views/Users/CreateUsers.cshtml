@model SORAPC.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}
<h2>Добавление пользователя</h2>
<form asp-controller="Users" asp-action="CreateUsers">
    <div class="form-group">
        <label asp-for="UserSurname">Фамилия</label>
        <input asp-for="UserSurname" required type="text" class="form-control" name="UserSurname" placeholder="Введите фамилию пользователя" />
    </div>
    <div class="form-group">
        <label asp-for="UserName">Имя</label>
        <input asp-for="UserName" required type="text" class="form-control" name="UserName" placeholder="Введите имя пользователя" />
    </div>
    <div class="form-group">
        <label asp-for="UserMiddlename">Отчество</label>
        <input asp-for="UserMiddlename" required type="text" class="form-control" name="UserMiddlename" placeholder="Введите отчество пользователя" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Почта</label>
        <input asp-for="Email" type="email" required type="email" class="form-control" name="Email" placeholder="Введите email" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Телефон</label>
        <input asp-for="Phone" required type="tel" class="form-control" name="Phone" placeholder="Введите номер телефона" />
    </div>
    <div class="form-group">
        <label asp-for="Logins">Логин</label>
        <input asp-for="Logins" required type="text" class="form-control" name="Logins" placeholder="Введите логин" />
    </div>
    <div class="form-group">
        <label asp-for="Passwords">Пароль</label>
        <input asp-for="Passwords" required type="password" class="form-control" name="Passwords" placeholder="Введите пароль" />
    </div>
    <div class="form-group">
        <label asp-for="RoleId">Роль</label>
        <select asp-for="RoleId" class="form-control" name="RoleId">
            <option value="1">Администратор</option>
            <option value="2">Клиент</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>