@model SORAPC.Models.User
@{
    ViewBag.Title = "Детали пользователя";
}
<h2>Детали пользователя</h2>
<dl>
    <dt>Фамилия</dt>
    <dd>@Model.UserSurname</dd>
    <dt>Имя</dt>
    <dd>@Model.UserName</dd>
    <dt>Отчество</dt>
    <dd>@Model.UserMiddlename</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Телефон</dt>
    <dd>@Model.Phone</dd>
    <dt>Логин</dt>
    <dd>@Model.Logins</dd>
    <dt>Пароль</dt>
    <dd>@Model.Passwords</dd>
    <dt>Роль</dt>
    <dd>
        @{
            string roleName = Model.RoleId == 1 ? "Администратор" :
            Model.RoleId == 2 ? "Клиент" :
            "Неизвестная роль";
            @roleName
        }
    </dd>
</dl>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>