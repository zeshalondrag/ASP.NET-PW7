@model SORAPC.Models.User
@{
    ViewBag.Title = "Удаление пользователя";
}
<h2>Удаление пользователя</h2>
<dl>
    <dt>Фамилия</dt>
    <dd>@Model.UserSurname</dd>
    <dt>Имя</dt>
    <dd>@Model.UserName</dd>
    <dt>Отчество</dt>
    <dd>@Model.UserMiddlename</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Телефон</dt>
    <dd>@Model.Phone</dd>
    <dt>Логин</dt>
    <dd>@Model.Logins</dd>
    <dt>Пароль</dt>
    <dd>@Model.Passwords</dd>
    <dt>Роль</dt>
    <dd>
        @{
            string roleName = Model.RoleId == 1 ? "Администратор" :
            Model.RoleId == 2 ? "Клиент" :
            "Неизвестная роль";
            @roleName
        }
    </dd>
</dl>
<form asp-controller="Users" asp-action="DeleteUsers" method="post">
    <input type="hidden" asp-for="IdUsers" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
</form>
<div class="mt-3">
    <button onclick="history.back()" class="btn btn-secondary">Назад</button>
</div>